<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_google_signin_btn_text_light_pressed">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_medium"
        android:padding="20dp"
        android:text="@string/registro_de_tatuadores"
        android:textAlignment="center"
        android:textColor="#FF1B9C"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/nombreCompletoEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/button_default_color"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/nombre__completo"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/button_default_color"
                android:textColorHint="@android:color/white"
                android:autofillHints="" />

            <Spinner

                android:id="@+id/sexoSpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/button_default_color"
                android:fontFamily="@font/roboto_medium"
                android:padding="10dp"
                android:hint="UbicaciÃ³n"
                android:textColor="@color/button_default_color"
                android:spinnerStyle="@style/SpinnerTextStyle"
                android:autofillHints="" />


            <EditText
                android:id="@+id/correoElectronicoEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/button_default_color"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/correo_electronico"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/button_default_color"
                android:textColorHint="@android:color/white"
                android:autofillHints="" />

            <EditText
                android:id="@+id/contrasenaEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/button_default_color"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/password"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/button_default_color"
                android:textColorHint="@android:color/white"
                android:autofillHints="" />

            <EditText
                android:id="@+id/confirmarContrasenaEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/button_default_color"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/confirmar_password"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/button_default_color"
                android:textColorHint="@android:color/white"
                android:autofillHints="" />

            <Button
                android:id="@+id/registrarButtonTatuador"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_background4"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/registrarme"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
